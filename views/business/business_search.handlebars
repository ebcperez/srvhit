<script>
	$('#searchbutton').html('Find Talent');
</script>
<div class="searchBar">
<form action="/search/student/filter" method="post">
  <input type="text" id="search_bar" placeholder="search..." maxlength="15" autocomplete="on" onmousedown="action();">
  <i class="search icon"></i>
  <select class="uiDropdown">
    <option value="">Role</option>
    <option value="4">Software Engineering</option>
    <option value="3">Mechanical Engineering</option>
    <option value="2">Security</option>
    <option value="1">Design</option>
    <option value="0">Finance</option>
  </select>
  <select class="uiDropdown">
    <option value="">Graduation</option>
    <option value="3">2017</option>
    <option value="2">2018</option>
    <option value="1">2019</option>
    <option value="0">2020</option>
  </select>
  <input type= "submit" class="uiButton">
</div>
</form>
<!-- Student Cards -->
<div class="flex-row" style="min-height: 100%;margin-bottom: 20px">
<div style="width: 66.6666%; height:auto">
<div class="all-cards">
  {{#each users}}
  <a class="uiCard" href="/profile/{{contact_info.email}}">
  <div class="content">
    <div class="cardHeader">
      <img class="studentImage" src="https://cdn0.iconfinder.com/data/icons/user-pictures/100/matureman1-512.png" style="vertical-align: top;" />
      <div class="head_right">
          <h4>{{about.name.first}} {{about.name.last}}</h4>
          <h6>School: {{#each education}}
              {{name}}
              {{/each}}
          </h6>
		  </div>
		  </div>
          <form method="post" action="/business/add_bookmark">
              <div>
                  <input type = "hidden" name = "addBookmark" value = {{contact_info.email}} />
                  <button id="bookmark" type="submit">Bookmark</button>
              </div>
          </form>
    </div>
	</a>
  {{/each}}
    </div>
</div>

<div class="favorites">
  {{#each users}}
  <a class="bookmark"   href="/profile/{{contact_info.email}}">
  <div class="flex-row">
      <img class="studentImage" src="https://cdn0.iconfinder.com/data/icons/user-pictures/100/matureman1-512.png" />
      <div class="head_right">
        <h4>{{username}}</h4>
        <h4>Industry: {{about.industry}}</h4>
      </div>
    </div>
	<img class="star" src="/css/bookmark.png" />
	</a>
  {{/each}}
</div>
</div>
